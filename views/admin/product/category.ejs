<% extend('../layout/master') %>

    <div ng-app="admin">
        <div class="admin-category" ng-controller="manage_categories">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            Categories
                        </h1>
                    </div>
                </div>
                <!-- /. ROW  -->

                <div class="row">
                    <div class="col-md-12">
                        <!-- Advanced Tables -->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Categories
                            </div>
                            <div>
                                <form>
                                    <input type="text" placeholder="Name new category" ng-model="nameCategory">
                                    <button class="btn-info" ng-click="createCategory()">Create New Category</button>
                                </form>
                            </div>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th class="text-center">ID</th>
                                                <th class="text-center">Category</th>
                                                <th class="text-center">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="gradeU" ng-repeat="x in listCate">
                                                <td class="text-center">{{x.idCategory}}</td>
                                                <td class="text-center">{{x.name}}</td>
                                                <td class="text-center">
                                                    <button class="btn-danger" ng-click="delete(x.idCategory)">delete</button>
                                                    <button class="btn-success">detail</button>
                                                    <button class="btn-primary" ng-click="edit(x.idCategory, x.name)">edit</button>
                                                </td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>