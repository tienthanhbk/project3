<% extend('../layout/master') %>

    <div ng-app="admin">
        <div ng-controller="manage_Product">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            Sub Categories
                            <button ng-click="Direction()">Create Product</button>
                        </h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <!-- Advanced Tables -->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Categories
                            </div>
                            
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>idProduct</th>
                                                <th>name</th>
                                                <th>code</th>
                                                <th>description</th>
                                                <th>accessories</th>
                                                <th>sub_Category_idSub_Category</th>
                                                <th>product_assuarance_policy</th>
                                                <th>month_assuarance</th>
                                                <th>brand_idbrand</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="gradeU" ng-repeat="x in listProduct">
                                                <td>{{x.idProduct}}</td>
                                                <td>{{x.name}}</td>
                                                <td>{{x.code}}</td>
                                                <td>{{x.description}}</td>
                                                <td>{{x.accessories}}</td>
                                                <td>{{x.sub_Category_idSub_Category}}</td>
                                                <td>{{x.product_assuarance_policy}}</td>
                                                <td>{{x.month_assuarance}}</td>
                                                <td>{{x.brand_idbrand}}</td>
                                                <td>
                                                    <button ng-click="delete(x.idProduct)">delete</button>
                                                    <!-- <button>detail</button> -->
                                                    <button ng-click="edit(x.idSub_Category)">edit</button>
                                                </td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>