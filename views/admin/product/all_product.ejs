<% extend('../layout/master') %>

    <div ng-app="admin">
        <div class="all-product" ng-controller="manage_Product">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            Sub Categories
                            <button class="btn-success" ng-click="Direction()">Create Product</button>
                        </h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <!-- Advanced Tables -->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Categories
                            </div>
                            
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th class="text-center" width="50">ID</th>
                                                <th class="text-center">Name</th>
                                                <th class="text-center" width="100">Code</th>
                                                <th class="text-center" width="300">Description</th>
                                                <th class="text-center" width="100">Category</th>
                                                <th class="text-center" width="80">Policy</th>
                                                <th class="text-center" width="80">Brand</th>
                                                <th class="text-center">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="gradeU" ng-repeat="x in listProduct">
                                                <td class="text-center">{{x.idProduct}}</td>
                                                <td>{{x.name}}</td>
                                                <td>{{x.code}}</td>
                                                <td>{{x.description}}</td>
                                                <td class="text-center">{{ listSubCategory[x.sub_Category_idSub_Category] }}</td>
                                                <td class="text-center">{{x.month_assuarance}}</td>
                                                <td class="text-center">{{ listBrand[x.brand_idbrand] }}</td>
                                                <td class="text-center">
                                                    <button class="btn-danger" ng-click="delete(x.idProduct)">delete</button>
                                                    <!-- <button>detail</button> -->
                                                    <button class="btn-primary" ng-click="edit(x.idProduct)">edit</button>
                                                </td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>